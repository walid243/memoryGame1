<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".InGameActivity">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:background="@color/black"
        android:shape="oval"
        android:src="@drawable/pause_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timer"
        tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="53dp">

        <ImageView
            android:id="@+id/card_3"
            android:layout_width="100sp"
            android:layout_height="150sp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/digimon"
            android:tag=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_1" />

        <ImageView
            android:id="@+id/card_4"
            android:layout_width="100sp"
            android:layout_height="150sp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="72dp"
            android:src="@drawable/digimon"
            android:tag=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="243dp">

        <ImageView
            android:id="@+id/card_1"
            android:layout_width="100sp"
            android:layout_height="150sp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/digimon"
            android:tag=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/card_2"
            android:layout_width="100sp"
            android:layout_height="150sp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="72dp"
            android:src="@drawable/digimon"
            android:tag=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="473dp">

        <ImageView
            android:id="@+id/card_5"
            android:layout_width="100sp"
            android:layout_height="150sp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/digimon"
            android:tag=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_3" />

        <ImageView
            android:id="@+id/card_6"
            android:layout_width="100sp"
            android:layout_height="150sp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="72dp"
            android:src="@drawable/digimon"
            android:tag=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_4" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>