<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/easyButton"
        android:layout_width="171dp"
        android:layout_height="63dp"
        android:layout_marginTop="176dp"
        android:backgroundTint="@color/fondo_boton"
        android:fontFamily="@font/denk_one_regular"
        android:gravity="center"
        android:text="@string/easy"
        android:tag="1"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/midButton"
        android:layout_width="171dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/fondo_boton"
        android:fontFamily="@font/denk_one_regular"
        android:gravity="center"
        android:text="@string/mid"
        android:tag="2"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/easyButton" />

    <Button
        android:id="@+id/hardButton"
        android:layout_width="171dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/fondo_boton"
        android:fontFamily="@font/denk_one_regular"
        android:gravity="center"
        android:text="@string/hard"
        android:tag="3"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/midButton" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="171dp"
        android:layout_height="63dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/fondo_boton"
        android:fontFamily="@font/denk_one_regular"
        android:gravity="center"
        android:text="@string/help"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hardButton" />

    <TextView
        android:id="@+id/helpText"
        android:visibility="invisible"
        android:clickable="false"
        android:layout_width="250sp"
        android:layout_height="350sp"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/denk_one_regular"
        android:background="@color/grey"
        android:gravity="center"
        android:text="@string/help"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/helpButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>